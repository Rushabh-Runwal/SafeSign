{
  "manifest_version": 3,
  "name": "Safe Sign",
  "version": "1.0",
  "description": "Detect and score privacy policies on websites.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
